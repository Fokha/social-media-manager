# Production Environment Template
# Copy to .env and fill in values

NODE_ENV=production
PORT=3000
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@postgres:5432/social_manager
# Or use SQLite for simpler deployments:
# SQLITE_PATH=/app/data/database.sqlite

# Redis
REDIS_URL=redis://redis:6379

# Security - CHANGE THESE!
JWT_SECRET=generate-a-strong-32-plus-character-secret-here
ENCRYPTION_KEY=generate-a-32-character-key-here

# OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/oauth/google/callback

TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=https://api.yourdomain.com/api/oauth/twitter/callback

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=https://api.yourdomain.com/api/oauth/facebook/callback

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=https://api.yourdomain.com/api/oauth/linkedin/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://api.yourdomain.com/api/oauth/github/callback

# WhatsApp & Telegram
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
TELEGRAM_BOT_TOKEN=

# AI Services
OPENAI_API_KEY=

# Stripe
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
STRIPE_PRICE_BASIC=price_xxxx
STRIPE_PRICE_PRO=price_xxxx
STRIPE_PRICE_BUSINESS=price_xxxx

# Push Notifications (generate with: node -e "require('./src/services/pushNotificationService').generateVapidKeys()")
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Docker-specific
POSTGRES_PASSWORD=YOUR_SECURE_POSTGRES_PASSWORD
